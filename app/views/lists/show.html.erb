<h1><%= @list.name %></h1>
<ul><% @list.bookmarks.each do |bookmark| %>
  <li><%= bookmark.movie.title %> <br> <%= image_tag bookmark.movie.poster_url, alt: "" %> <br> <%= bookmark.movie.overview %> <br> <%= bookmark.movie.rating %><br> <%= bookmark.comment %> <br> <%= link_to "Delete",
    bookmark_path(bookmark),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
  <% end %>
</ul>
<%= link_to "Add bookmark", new_list_bookmark_path(@list)  %>
<br>
<%= link_to "Back to list overview", lists_path %>
